<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jll.remote.control">

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="STOP"
        android:onClick="bt"
        android:id="@+id/btnStop"
        android:background="@drawable/stopbtn"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/D"
        android:layout_toEndOf="@+id/D" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="UP"
        android:id="@+id/buttonU"
        android:background="@drawable/up"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/D"
        android:layout_alignStart="@+id/D" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="LEFT"
        android:id="@+id/L"
        android:background="@drawable/left"
        android:layout_alignTop="@+id/R"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="RIGHT"
        android:id="@+id/R"
        android:background="@drawable/right"
        android:layout_marginBottom="78dp"
        android:layout_alignBottom="@+id/D"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="DOWM"
        android:id="@+id/D"
        android:background="@drawable/down"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="START"-->
        <!--android:id="@+id/S"-->
        <!--android:onClick="start"-->
        <!--android:visibility="invisible"-->
        <!--android:layout_alignTop="@+id/R"-->
        <!--android:layout_alignLeft="@+id/buttonU"-->
        <!--android:layout_alignStart="@+id/buttonU"-->
        <!--android:layout_above="@+id/L" />-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="btnRandom"
        android:id="@+id/btnR"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/R"
        android:layout_alignStart="@+id/R" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="调节"
            android:id="@+id/btnAdjust"
            android:gravity="center"
            android:background="#11AA8c"
            android:layout_weight="0.34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="随机"
            android:id="@+id/btnRandom"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#11AA8c"
            android:layout_weight="0.34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="调速"
            android:id="@+id/btnSpeed"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#11AA8c"
            android:layout_weight="0.34" />
    </LinearLayout>

</RelativeLayout>
